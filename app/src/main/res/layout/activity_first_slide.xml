            android:layout_height="15dp" />

        <ImageView
            android:clickable="true"
            android:src="@drawable/dot1"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <ImageView
            android:clickable="true"
            android:src="@drawable/dot1"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp" />

    </LinearLayout>

</FrameLayout>
